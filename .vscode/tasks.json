{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "DEBUG_KERNEL",
            "command": "cl.exe",
            "args": [
                "/Zc:wchar_t",
                "/GR-",
                "/std:c++17",
                "/MDd",
                "/D_DEBUG",
                "/DUNICODE",
                "/D_UNICODE",
                "/kernel",
                "/Zi",
                "/Fe:",
                "${workspaceFolder}\\kernel_dbj_dbg.exe",
                "${workspaceFolder}\\program.cpp",
                "${workspaceFolder}\\fwk\\main.cpp"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "RELEASE_BUILD",
            "command": "cl.exe",
            "args": [
                "/Zc:wchar_t",
                "/GR-",
                "/std:c++17",
                "/MD",
                "/DNDEBUG",
                "/DUNICODE",
                "/D_UNICODE",
                "/kernel",
                "/Fe:",
                "${workspaceFolder}\\kernel_dbj.exe",
                "${workspaceFolder}\\program.cpp",
                "${workspaceFolder}\\fwk\\main.cpp"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}